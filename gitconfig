[user]
	name = Damien Cupif
        email = dcupif@kpler.com

[core]
        editor = vim
	pager = cat

[alias]
	lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%an %cr)%Creset' --abbrev-commit --date=relative
	ll = lg -10
	wdiff = diff --word-diff=color --word-diff-regex=.

[grep]
	linenumber = true

[color]
        ui = auto

[rebase]
	preserve = true

[pull]
	rebase = true
	rebase = preserve

[merge]
	conflictstyle = diff3
	renormalize = 1
